pipeline {
    agent {
      dockerContainer 'public.ecr.aws/docker/library/maven:amazoncorretto'
    }
    stages {
        stage('Source') {
            steps {
                sh 'mvn --version'
                sh 'git --version'
                git branch: 'feature/chapter3',
                    url: 'https://github.com/LinkedInLearning/intermediate-jenkins-3978673.git',
                    credentialsId: 'f65e94fc-4137-45fd-8b88-a4df745951d7'
            }
        }
        stage('Clean') {
            steps {
                dir("${env.WORKSPACE}/ch3_agents_and_distributed_builds/03_03_add_docker_agents_to_jenkins"){
                    sh 'mvn clean'
                }
            }
        }
        stage('Test') {
            steps {
                dir("${env.WORKSPACE}/ch3_agents_and_distributed_builds/03_03_add_docker_agents_to_jenkins"){
                    sh 'mvn test'
                }
            }
        }
        stage('Package') {
            steps {
                dir("${env.WORKSPACE}/ch3_agents_and_distributed_builds/03_03_add_docker_agents_to_jenkins"){
                    sh 'mvn package -DskipTests'
                }
            }
        }
    }
}
